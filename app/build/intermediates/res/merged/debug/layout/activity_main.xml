<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.demo_service.MainActivity" >
   <!-- <string name="start_service">startService</string>
    <string name="bind_service">bindService</string>
    <string name="stop_start_service">stop_startService</string>
    <string name="stop_bind_service">stop_bindService</string>
    <string name="begin_anotherActivity">begin_anotherActivity</string>-->

    <Button
        android:id="@+id/start_service"
        android:text="@string/start_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <Button
        android:layout_below="@+id/start_service"
        android:id="@+id/bind_service"
        android:text="@string/bind_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <Button
        android:layout_below="@+id/bind_service"
        android:id="@+id/stop_start_service"
        android:text="@string/stop_start_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <Button
        android:layout_below="@+id/stop_start_service"
        android:id="@+id/stop_bind_service"
        android:text="@string/stop_bind_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <Button
        android:layout_below="@+id/stop_bind_service"
        android:id="@+id/begin_anotherActivity"
        android:text="@string/begin_anotherActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <Button
        android:layout_below="@+id/begin_anotherActivity"
        android:id="@+id/intent_service"
        android:text="@string/intent_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


</RelativeLayout>
